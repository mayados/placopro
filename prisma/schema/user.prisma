model User{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    clerkUserId  String? @unique
    mail String @unique
    name String
    firstName String
    password  String
    role UserRoleEnum
    toDos ToDo[]
    reportsDone Report[]
    // billsEstablished Bill[]
    // quotesEstablished Quote[]
    // The user can create Estimation files
    estimationsEstablished Estimation[]
}

enum UserRoleEnum {
    DIRECTOR
    SECRETARY
    EMPLOYEE
}
